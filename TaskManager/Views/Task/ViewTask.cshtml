@model TaskManager.Models.Task

<h2>View Task</h2>

<div>
    <h4>Title</h4>
    <p>@Model.Title</p>
</div>
<div>
    <h4>Description</h4>
    <p>@Model.Description</p>
</div>
<div>
    <h4>Due Date</h4>
    <p>@Model.DueDate.ToShortDateString()</p>
</div>
<div>
    <h4>Is Completed</h4>
    <p>@Model.IsCompleted</p>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
